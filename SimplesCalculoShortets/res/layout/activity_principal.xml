              android:clickable="true"
              android:padding="10dip" 
              android:id="@+id/idBntDescSimples"
              >

              <LinearLayout
                  android:id="@+id/thumbnail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="10dip"
                  android:padding="3dip" >

                  <ImageView
                      
                      android:layout_width="60dip"
                      android:layout_height="60dip"
                      android:src="@drawable/icporcetagem" />
              </LinearLayout>

              <TextView
                  android:id="@+id/tvPorcentagem"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:paddingTop="5dip"
                  android:text="Porcentagem"
                  android:textSize="@dimen/fonte_menu"
                  android:textStyle="bold"
                  android:textColor="#333845"
                  />
                  <ImageView android:layout_width="20dip"
